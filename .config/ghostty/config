# ----- Fonts -----
font-family = JetBrainsMono Nerd Font Mono
font-size = 13
adjust-cell-height = 20%

# ----- Colors & cursor -----
# Use a theme that exists; see notes below for Catppuccin setup.
# Example built-in you likely have: "Solarized (dark)" or "Dracula"
# theme = Dracula
theme = dark:Catppuccin Mocha,light:Catppuccin Latte
cursor-style = block
cursor-style-blink = false
cursor-color = #89b4fa
cursor-text = cell-background

# ----- Background -----
background-opacity = 1
background-opacity-cells = true
background-blur = true

# ----- Window & layout -----
window-decoration = auto
fullscreen = false
window-padding-x = 8
window-padding-y = 8
window-vsync = true

# ----- Scrollback -----
scrollback-limit = 268435456

# ----- Shell & integration -----
command = /opt/homebrew/bin/fish
shell-integration = detect

# ----- macOS -----
macos-option-as-alt = true
macos-secure-input-indication = true

# ----- Keybinds -----
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+a=select_all

keybind = cmd+t=new_tab
keybind = cmd+n=new_window
keybind = cmd+w=close_tab
keybind = cmd+shift+[=move_tab:-1
keybind = cmd+shift+]=move_tab:1

keybind = ctrl+opt+left=goto_split:left
keybind = ctrl+opt+right=goto_split:right
keybind = ctrl+opt+up=goto_split:up
keybind = ctrl+opt+down=goto_split:down

keybind = cmd+plus=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

keybind = cmd+up=scroll_page_up
keybind = cmd+down=scroll_page_down

keybind = cmd+comma=open_config
keybind = cmd+shift+p=toggle_command_palette
keybind = cmd+shift+r=reload_config
